generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model flashcards {
  id          Int       @id(map: "Flashcard_pkey") @default(autoincrement())
  user_id     Int?
  term        String
  definition  String
  card_number Int
  created_at  DateTime? @default(now()) @db.Timestamp(6)
  users       users?    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "Flashcard_user_id_fkey")

  @@unique([user_id, card_number], map: "Flashcard_user_id_card_number_key")
}

model users {
  id         Int          @id(map: "User_pkey") @default(autoincrement())
  username   String       @unique(map: "User_username_key")
  created_at DateTime?    @default(now()) @db.Timestamp(6)
  password   String
  flashcards flashcards[]
}
